<UserControl x:Class="DiaryApp.Views.Popup.CustomDayButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DiaryApp.Views.Popup"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <Button x:Name="DayButton" Width="50" Height="50" Background="White" Click="DayButton_Click">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Height="40">
            <TextBlock x:Name="DayText" Text="1" HorizontalAlignment="Center" FontWeight="Bold" />
            <Image x:Name="DayImage" Width="20" Height="20" Margin="3" HorizontalAlignment="Center" Visibility="Visible"/>
        </StackPanel>
    </Button>
</UserControl>
